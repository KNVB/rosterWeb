.borderCell
{
	border: 1px solid black;
	text-align: center;
}
.dateCell
{
	font-size:15;
	width:1.5%;
}
.dayCell
{
	font-size:12;
	width:1.5%;
}
.alignCenter
{
	text-align: center;
}
.alignLeft
{
	text-align:left;
}
.underlineText
{
	font-weight: bold;
	text-decoration: underline;
}
.rosterMonthSelect
{
	font-weight:bold;
	border:none;
	direction:rtl;
}
.boldText
{
	font-weight:bold;
}
.weekend
{
	color:red;
}
.shiftCell {
  white-space: pre-wrap;
  word-break: break-all;
  width: 1.5%;
  max-width: 1.5%;
  overflow: hidden;
}
.aShiftColor
{
	background-color:#ff99cc;
}
.bShiftColor
{ 
	background-color:#ffffcc;
}
.cShiftColor
{
	background-color:#ccffcc;
}
.oShiftColor
{
	background-color:#ffffff;
}
.dxShiftColor
{
	background-color:#ccffff;
}
.sickLeaveColor
{
	background-color:#cc99ff;
}
.highlightCol
{
	background-color:yellow;
}
.errorRedBlackGround
{
	background-color:red;
	animation: blinker 1s linear infinite;
}
@keyframes blinker {  
  50% { opacity: 0; }
}
.vancantShift
{
	color:#ff6600;
	text-align:right!Important;
}
.footer
{
	display:none;
}
.theRestCell
{
	width: 70px;
	max-width:70px;
	white-space: pre-wrap;
  	word-break: break-all;
  	overflow: hidden;
  	padding:0;	
}
